<!DOCTYPE html>
<html lang="ru">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - Filippov Hotel</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/css/simple-sidebar.css" rel="stylesheet" />


    <script src="https://kit.fontawesome.com/bacc822a81.js" crossorigin="anonymous"></script>

    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <!-- jQuery File Upload -->
    <link href="~/Content/jquery.fileupload.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.fileupload.js"></script>

</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                Filippov Hotel
            </div>

            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Rooms")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-building mr-1"></i>Комнаты
                </a>
                <a href="@Url.Action("Index","RoomTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Типы комнат
                </a>
                <a href="@Url.Action("Index","RoomBookings")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Бронирование
                </a>
                @*<a href="@Url.Action("Index","Payments")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Оплата
                </a>
                <a href="@Url.Action("Index","PaymentTypes")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Тип оплаты
                </a>*@
                <a href="@Url.Action("Index","Services")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Сервисы
                </a>
                @*<a href="@Url.Action("Index","AspNetRoles")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Роли
                </a>
                <a href="@Url.Action("Index","AspNetUserRoles")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Пользователь - роль
                </a>
                <a href="@Url.Action("Index","AspNetUsers")" class="list-group-item list-group-item-action bg-light">
                    <i class="fas fa-users-cog mr-1"></i>Пользователи
                </a>*@

            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"><i class="fa-solid fa-bars"></i></button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">
                                Logout
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>




            <div class="container-fluid">
                @RenderBody()

            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()


    }



    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->

    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>


    @RenderSection("scripts", required: false)
</body>
</html>


@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Filippov Hotel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
        section.site-hero {
            padding-top: 400px; /* Высота стандартного верхнего меню Bootstrap */
        }

        h1.heading {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: #fff;
            text-align: center;
            width: 100%;
            font-size: 3em;
        }
    </style>
    <script>
        function updateCheckOutDateMin() {
            const checkInDateInput = document.getElementById("DateFrom");
            const checkOutDateInput = document.getElementById("DateTo");
            const checkInDate = new Date(checkInDateInput.value);
            const checkOutDate = new Date(checkOutDateInput.value);
            if (checkOutDate <= checkInDate) {
                const minDate = new Date(checkInDate);
                minDate.setDate(minDate.getDate() + 1);
                checkOutDateInput.setAttribute("min", minDate.toISOString().slice(0, 10));
                checkOutDateInput.value = minDate.toISOString().slice(0, 10);
            } else {
                checkOutDateInput.setAttribute("min", checkInDateInput.value);
            }
        }
    </script>
</head>
<body>

    <section class="site-hero overlay" style="background-image: url(/Images/fon.jpg)" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row site-hero-inner justify-content-center align-items-center">
                <div class="col-md-12 text-center" data-aos="fade-up">
                    <h1 class="heading">Лучшее место для отдыха</h1>
                </div>
            </div>
        </div>

        <a class="mouse smoothscroll" href="#next">
            <div class="mouse-icon">
                <span class="mouse-wheel"></span>
            </div>
        </a>
    </section>
    <!-- END section -->
    @using (Html.BeginForm("Index", "Rooms", FormMethod.Get, new { action = "/Rooms/Index" }))
    {
        <section class="section bg-light pb-0">
            <div class="container">
                <div class="row check-availabilty" id="next">
                    <div class="block-32" data-aos="fade-up" data-aos-offset="-200">
                        <form>
                            <div class="row justify-content-center">
                                <div class="col-md-3 ">
                                    <label for="checkin_date" class="font-weight-bold text-black">Дата заезда</label>
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="icon-calendar"></span></div>
                                        <input type="date" id="DateFrom" class="form-control" name="DateFrom"
                                               value="@(ViewData["DateFrom"] ?? DateTime.Today.AddDays(1).ToString("yyyy-MM-dd"))"
                                               min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")"
                                               max="@DateTime.Today.AddYears(1).ToString("yyyy-MM-dd")"
                                               onchange="updateCheckOutDateMin()" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="checkout_date" class="font-weight-bold text-black">Дата выезда</label>
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="icon-calendar"></span></div>
                                        <input type="date" id="DateTo" name="DateTo" class="form-control"
                                               value="@(ViewData["DateTo"] ?? DateTime.Today.AddDays(3).ToString("yyyy-MM-dd"))"
                                               min="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")"
                                               max="@DateTime.Today.AddYears(1).ToString("yyyy-MM-dd")" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label for="children" class="font-weight-bold text-black">Гости</label>
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        <select id="selectID1" class="form-control" name="Person">
                                            <option value=1 @if ((string)ViewData["Person"] == "1") { <text> selected</text> }>
                                                1
                                            </option>
                                            <option value=2 @if ((string)ViewData["Person"] == "2") { <text> selected</text> }>
                                                2
                                            </option>
                                            <option value=3 @if ((string)ViewData["Person"] == "3") { <text> selected</text> }>
                                                3
                                            </option>
                                            <option value=4 @if ((string)ViewData["Person"] == "4") { <text> selected</text> }>
                                                4
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3 text-center" >
                                    <br />
                                    <input type="submit" value="Найти" class="btn btn-primary btn-lg" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    }
        <section class="py-5 bg-light pt-4 pb-7">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-12 col-lg-4 order-lg-1 mt-5" data-aos="fade-up" style="margin-bottom:12%;margin-right:8%">
                        <h2 class="">
                            Добро пожаловать в наш отель!
                        </h2>
                        <p class="mb-4 mt-4">Мы рады приветствовать вас в нашем уютном и комфортабельном отеле, расположенном в красивом уголке нашей страны. Мы гарантируем, что ваше пребывание у нас станет незабываемым опытом, и вы захотите вернуться к нам снова и снова.</p>
                        <p><a href="#" class="btn btn-primary text-white py-2 mr-3 mt-4">Узнать больше</a></p>
                    </div>
                    <div class="col-md-12 col-lg-7 mr-auto order-lg-2 position-relative mb-5 pr-2" data-aos="fade-up">
                        <img src="/Images/fon1.jpg" alt="Image" class="img-fluid rounded" style="max-width: 100%; height: auto; margin-bottom:10%;margin-top:-10%">
                    </div>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="container">
                <div class="row justify-content-center text-center mb-5">
                    <div class="col-md-12">
                        <h2 class="heading" data-aos="fade-up">Комнаты &amp; Размещения</h2>
                        <p data-aos="fade-up" data-aos-delay="100">Мы предлагаем комфортабельные номера различных категорий, чтобы удовлетворить потребности различных типов гостей. В нашем отеле вы найдете все необходимое для приятного и комфортного пребывания.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-lg-4" data-aos="fade-up">
                        <a onclick="location.href='@Url.Action("Details","Rooms", new { id = 22 })'" class="room">
                            <figure class="img-wrap">
                                <img src="/Images/Стандарт_одноместный (3).jpg" alt="Free website template" class="img-fluid mb-3" style="max-width: 100%; height: 400px;">
                            </figure>
                            <div class="p-3 text-center room-info">
                                <h2>Одноместный номер</h2>
                                <span class="text-uppercase letter-spacing-1">От 1500 ₽ / ночь</span>
                            </div>
                        </a>
                        <br />
                    </div>
                    
                    <div class="col-md-6 col-lg-4" data-aos="fade-up">
                        <a onclick="location.href='@Url.Action("Details","Rooms", new { id = 25 })'" class="room">
                            <figure class="img-wrap">
                                <img src="/Images/Стандарт_двухместный (2).jpg" alt="Free website template" class="img-fluid mb-3" style="max-width: 100%; height: 400px;">
                            </figure>
                            <div class="p-3 text-center room-info">
                                <h2>Двухместный номер</h2>
                                <span class="text-uppercase letter-spacing-1">От 2000 ₽ / ночь</span>
                            </div>
                        </a>
                        <br />
                    </div>
                    
                    <div class="col-md-6 col-lg-4" data-aos="fade-up">
                        <a onclick="location.href='@Url.Action("Details","Rooms", new { id = 28 })'" class="room">
                            <figure class="img-wrap">
                                <img src="/Images/Делюкс_трехместный.jpg" alt="Free website template" class="img-fluid mb-3" style="max-width: 100%; height: 400px;">
                            </figure>
                            <div class="p-3 text-center room-info">
                                <h2>Трехкомнатный номер</h2>
                                <span class="text-uppercase letter-spacing-1">От 3000 ₽ / ночь</span>
                            </div>
                        </a>
                        <br />
                    </div>
                    

                </div>
            </div>
        </section>
    </body>
</html>